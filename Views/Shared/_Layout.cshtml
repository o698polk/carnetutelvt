<body >
 
    <div class="site-mobile-menu site-navbar-target">
        <div class="site-mobile-menu-header">
            <div class="site-mobile-menu-close">
                <span class="icofont-close js-menu-toggle"></span>
            </div>
        </div>
        <div class="site-mobile-menu-body"></div>
    </div>

    <nav class="site-nav">
        <div class="container">
            <div class="site-navigation">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="logo m-0"><strong> UTELVT CARNET  </strong> <span class=""></span></a>
               <!--  <a asp-area="" asp-controller="Usertbs" asp-action="CorreoEnviar" class="logo m-0"><strong> Correo </strong> <span class=""></span></a>
             -->  

             <ul class="js-clone-nav d-none d-lg-inline-block text-left site-menu float-right">
                   
                    @if (context.HttpContext.Session.GetInt32("Id") > 0)
                    {
                         <li >
                            <a type="button" class="btn btn-info" style="text-transform: uppercase; color:black;" asp-area="" asp-controller="Usertbs" asp-action="Tablero"> <strong>@context.HttpContext.Session.GetString("name")</strong> </a>
                        </li>

                       
                        if (context.HttpContext.Session.GetString("Rol") == "1")
                        {
                            <li><a asp-area="" type="button" class="btn btn-secondary" asp-controller="Usertbs" asp-action="Index">Panel Admin</a></li>
                        }
                         <li>
                            <a type="button" class="btn btn-danger" asp-area="" asp-controller="Usertbs" asp-action="Logout">Salir</a>
                        </li>
                    }
                    else
                    {
                        <li><a asp-area="" type="button " class="btn btn-info" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-area="" type="button" class="btn btn-secondary" asp-controller="Usertbs" asp-action="Register">Crear Cuenta</a></li>
                        <li><a asp-area="" type="button" class="btn btn-success" asp-controller="Usertbs" asp-action="Login">Iniciar Sesion</a></li>
                    }
                 
                
                   
                   
                  
                </ul>

                <a href="#" class="burger ml-auto float-right site-menu-toggle js-menu-toggle d-inline-block d-lg-none light" data-toggle="collapse" data-target="#main-navbar">
                    <span></span>
                </a>

            </div>
        </div>
    </nav>
    
        <main role="main" class="pb-3">
            @RenderBody()
        </main>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

   <!--  <script src="~/js/jquery-3.4.1.min.js"></script>-->
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
